{% extends 'base_theme.html.twig' %}

{% block headline %}{% endblock headline %}

{% block meta %}
	{{ parent() }}
	<meta name="viewport" content="width=device-width, initial-scale=1">
{% endblock meta %}

{% block head_style %}
	{{ parent() }}
<!--===============================================================================================-->	
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,800&display=swap" rel="stylesheet" type="text/css">
<!--===============================================================================================-->
	{{ encore_entry_link_tags('login') }}
<!--===============================================================================================-->
{% endblock head_style %}

{% block foot_script %}
	<script src="{{ asset('https://code.jquery.com/jquery-3.4.1.slim.min.js') }}"></script>

	{{ encore_entry_script_tags('login') }}
{% endblock foot_script %}

{% block navbar %}
	{% embed 'Theme/Navbar/navbar.html.twig' with { fixedTop: true, staticTop: true, inverse: true, id: 'navbar-body' } %}
		{% block brand %}
			<a class="navbar-brand" href="#">
				<img class="navbar-brand" height="25" style="padding:0" src="{{ asset('images/logo.png') }}" />
				Dance School
			</a>

		{% endblock %}
		{% block menu_container %}{% endblock %}
	{% endembed %}
{% endblock navbar %}

{% block container %}
	<section class="limiter">
		{% if error %}
			<div class="alert alert-danger" style="margin-top: 20px;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<div class="container-login100" style="">
			<div class="wrap-login100 p-b-30">
				<form class="login100-form validate-form" action="{{ path("login") }}" method="post">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

					<span class="login100-form-title p-t-20 p-b-45">
						Welcome!
					</span>

					<div class="wrap-input100 validate-input m-b-10" data-validate = "Username is required">
						<input class="input100" type="text" name="_username" placeholder="{{ 'security.login.username'|trans }}" value="{{ last_username }}" required="required" autocomplete="username">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input m-b-10" data-validate = "Password is required">
						<input class="input100" type="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required" autocomplete="current-password"> 
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock"></i>
						</span>
					</div>

					<div class="wrap-input100 text-center">
						<label class="txt1">
							<input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
						</label>
					</div>

					<div class="container-login100-form-btn p-t-10">
						<button class="login100-form-btn" id="_submit" name="_submit">
							{{ 'security.login.submit'|trans }}
						</button>
					</div>

					<div class="text-center w-full p-t-25 p-b-80">
						<a href="#" class="txt1">
							Forgot Username / Password?
						</a>
					</div>

					<div class="text-center w-full">
						<a class="txt1" href="#">
							Create new account
							<i class="fa fa-long-arrow-right"></i>						
						</a>
					</div>
				</form>
			</div>
		</div>
	</section>
{% endblock %}