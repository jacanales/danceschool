{% extends "::layout.html.twig" %}

{% block headline %}
    {{ 'title.view_course'|trans() }}
{% endblock %}

{% block content_content %}
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>{{ course.getId() }}</dd>

        <dt>{{ 'form.label.description'|trans() }}</dt>
        <dd>{{ course.getDescription() }}</dd>

        <dt>{{ 'form.label.price'|trans() }}</dt>
        <dd>{{ course.getPrice() }}</dd>
    </dl>

    <a href="{{ path('danceschool_course_index') }}" class="btn btn-primary btn-sm" role="button">{{ 'button.go_to_index'|trans() }}</a>
    <a href="{{ path('danceschool_course_edit', {'id': course.id }) }}" class="btn btn-default btn-sm" role="button">{{ 'button.edit'|trans() }}</a>
    <a href="{{ path('danceschool_course_remove', {'id': course.id }) }}" class="btn btn-danger btn-sm" role="button">{{ 'button.delete'|trans() }}</a>
{% endblock %}
