{% extends "layout.html.twig" %}

{% block headline %}
    {{ 'title.courses'|trans() }}
{% endblock %}

{% block content_content %}
<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th data-field="id" data-align="right" data-sortable="true">ID</th>
                <th data-field="name" data-align="center" data-sortable="true">{{ 'form.label.name'|trans() }}</th>
                <th data-field="price" data-sortable="true">{{ 'form.label.price'|trans() }}</th>
                <th data-field="show" data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr class="tr-class-1">
                <td class="info">{{ course.id }}</td>
                <td>{{ course.name }}</td>
                <td>{{ course.price }}</td>
                <td class="info"><a href="{{ path('danceschool_course_show', {'id': course.id}) }}" class="btn btn-default btn-xs" role="button">{{ 'button.view'|trans() }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
