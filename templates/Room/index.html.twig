{% extends "layout.html.twig" %}

{% block headline %}
    {{ 'title.rooms'|trans() }}
{% endblock %}

{% block content_content %}
<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th scope="col" data-field="id" data-align="right" data-sortable="true">ID</th>
                <th scope="col" data-field="name" data-align="right" data-sortable="true">{{ 'form.label.name'|trans() }}</th>
                <th scope="col" data-field="price" data-sortable="true">{{ 'form.label.price'|trans() }}</th>
                <th scope="col" data-field="address" data-sortable="true">{{ 'form.label.address'|trans() }}</th>
                <th scope="col" data-field="city" data-sortable="true">{{ 'form.label.city'|trans() }}</th>
                <th scope="col" data-field="postal_code" data-sortable="true">{{ 'form.label.postal_code'|trans() }}</th>
                <th scope="col" data-field="phone" data-sortable="true">{{ 'form.label.phone'|trans() }}</th>
                <th scope="col" data-field="show" data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr class="tr-class-1">
                <th class="info" scope="row">{{ room.id }}</th>
                <td>{{ room.name }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.address }}</td>
                <td>{{ room.city }}</td>
                <td>{{ room.postalCode }}</td>
                <!-- td>{% if room.phone %}{{ room.phone }}{% endif %}</td-->
                <td class="info"><a href="{{ path('danceschool_room_show', {'id': room.getId()}) }}" class="btn btn-primary btn-sm" role="button">{{ 'button.view'|trans() }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
