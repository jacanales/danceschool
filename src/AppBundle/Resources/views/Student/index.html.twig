{% extends "::layout.html.twig" %}

{% block headline %}
    List of Students
{% endblock %}

{% block content_content %}
<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th data-field="id" data-align="right" data-sortable="true">ID</th>
                <th data-field="name" data-align="right" data-sortable="true">Name</th>
                <th data-field="surname" data-align="right" data-sortable="true">Surname</th>
                <th data-field="email" data-align="right" data-sortable="true">Email</th>
                <th data-field="member" data-align="right" data-sortable="true">Member</th>
                <th data-field="comment" data-sortable="true">comment</th>
                <th data-field="show" data-sortable="false"></th>
                <th data-field="edit" data-sortable="false"></th>
                <th data-field="delete" data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr class="tr-class-1">
                <td class="info">{{ student.id }}</td>
                <td>{{ student.user.name }}</td>
                <td>{{ student.user.surname }}</td>
                <td>{{ student.user.email }}</td>
                <td>{{ student.member }}</td>
                <td>{{ student.comment }}</td>
                <td class="info"><a href="{{ path('mayimbe_student_show', {'id': student.id }) }}" class="btn btn-default btn-xs" role="button">View</a></td>
                <td class="info"><a href="{{ path('mayimbe_student_edit', {'id': student.id }) }}" class="btn btn-default btn-xs" role="button">Edit</a></td>
                <td class="danger"><a href="{{ path('mayimbe_student_remove', {'id': student.id }) }}" class="btn btn-danger btn-xs" role="button">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}