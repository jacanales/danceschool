{% extends "::layout.html.twig" %}

{% block headline %}
    List of Teachers
{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-hover table-condensed">
            <thead>
            <tr>
                <th data-field="id" data-align="right" data-sortable="true">ID</th>
                <th data-field="wage" data-align="center" data-sortable="true">wage</th>
                <th data-field="comment" data-sortable="true">comment</th>
                <th data-field="show" data-sortable="false"></th>
                <th data-field="edit" data-sortable="false"></th>
                <th data-field="delete" data-sortable="false"></th>
            </tr>
            </thead>
            <tbody>
            {% for teacher in teachers %}
                <tr class="tr-class-1">
                    <td class="info">{{ teacher.id }}</td>
                    <td>{{ teacher.wage }}</td>
                    <td>{{ teacher.comment }}</td>
                    <td class="info"><a href="{{ path('mayimbe_teacher_show', {'id': teacher.id }) }}" class="btn btn-default btn-xs" role="button">View</a></td>
                    <td class="info"><a href="{{ path('mayimbe_teacher_edit', {'id': teacher.id }) }}" class="btn btn-default btn-xs" role="button">Edit</a></td>
                    <td class="danger"><a href="{{ path('mayimbe_teacher_remove', {'id': teacher.id }) }}" class="btn btn-danger btn-xs" role="button">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}