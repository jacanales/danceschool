{% extends "AppBundle::layout.html.twig" %}

{% block headline %}
    {{ 'title.rooms'|trans({}, 'AppBundle') }}
{% endblock %}

{% block content_content %}
<div>
    <a href="{{ path('danceschool_room_add') }}" class="btn btn-primary" role="button">{{ 'button.add'|trans({}, 'AppBundle') }}</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th data-field="id" data-align="right" data-sortable="true">ID</th>
                <th data-field="id" data-align="right" data-sortable="true">{{ 'form.label.name'|trans({}, 'AppBundle') }}</th>
                <th data-field="price" data-sortable="true">{{ 'form.label.price'|trans({}, 'AppBundle') }}</th>
                <th data-field="address" data-sortable="true">{{ 'form.label.address'|trans({}, 'AppBundle') }}</th>
                <th data-field="city" data-sortable="true">{{ 'form.label.city'|trans({}, 'AppBundle') }}</th>
                <th data-field="postal_code" data-sortable="true">{{ 'form.label.postal_code'|trans({}, 'AppBundle') }}</th>
                <th data-field="phone" data-sortable="true">{{ 'form.label.phone'|trans({}, 'AppBundle') }}</th>
                <th data-field="show" data-sortable="false"></th>
                <th data-field="edit" data-sortable="false"></th>
                <th data-field="delete" data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr class="tr-class-1">
                <td class="info">{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.address }}</td>
                <td>{{ room.city }}</td>
                <td>{{ room.postalCode }}</td>
                <td>{% if room.phone %}{{ room.phone|phone_number_format('NATIONAL') }}{% endif %}</td>
                <td class="info"><a href="{{ path('danceschool_room_show', {'id': room.getId()}) }}" class="btn btn-default btn-xs" role="button">{{ 'button.view'|trans({}, 'AppBundle') }}</a></td>
                <td class="info"><a href="{{ path('danceschool_room_edit', {'id': room.id }) }}" class="btn btn-default btn-xs" role="button">{{ 'button.edit'|trans({}, 'AppBundle') }}</a></td>
                <td class="danger"><a href="{{ path('danceschool_room_remove', {'id': room.id }) }}" class="btn btn-danger btn-xs" role="button">{{ 'button.delete'|trans({}, 'AppBundle') }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
