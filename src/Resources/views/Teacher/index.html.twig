{% extends "::layout.html.twig" %}

{% block headline %}
    {{ 'title.teachers'|trans() }}
{% endblock %}

{% block content_content %}
<div>
    <a href="{{ path('danceschool_teacher_add') }}" class="btn btn-primary" role="button">{{ 'button.add'|trans() }}</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th data-field="id" data-align="right" data-sortable="true">ID</th>
                <th data-field="name" data-align="right" data-sortable="true">{{ 'form.label.name'|trans() }}</th>
                <th data-field="lastname" data-align="right" data-sortable="true">{{ 'form.label.lastname'|trans() }}</th>
                <th data-field="email" data-align="right" data-sortable="true">{{ 'form.label.email'|trans() }}</th>
                <th data-field="wage" data-align="center" data-sortable="true">{{ 'form.label.wage'|trans() }}</th>
                <th data-field="comment" data-sortable="true">{{ 'form.label.comment'|trans() }}</th>
                <th data-field="show" data-sortable="false"></th>
                <th data-field="edit" data-sortable="false"></th>
                <th data-field="delete" data-sortable="false"></th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr class="tr-class-1">
                <td class="info">{{ teacher.id }}</td>
                <td>{{ teacher.User.name }}</td>
                <td>{{ teacher.User.lastname }}</td>
                <td>{{ teacher.User.email }}</td>
                <td>{{ teacher.wage }}</td>
                <td>{{ teacher.comment }}</td>
                <td class="info"><a href="{{ path('danceschool_teacher_show', {'id': teacher.id }) }}" class="btn btn-default btn-xs" role="button">{{ 'button.view'|trans() }}</a></td>
                <td class="info"><a href="{{ path('danceschool_teacher_edit', {'id': teacher.id }) }}" class="btn btn-default btn-xs" role="button">{{ 'button.edit'|trans() }}</a></td>
                <td class="danger"><a href="{{ path('danceschool_teacher_remove', {'id': teacher.id }) }}" class="btn btn-danger btn-xs" role="button">{{ 'button.delete'|trans() }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
